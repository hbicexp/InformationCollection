@model IEnumerable<TimiSoft.InformationCollection.Models.SourceRegexView>

@{
    Layout = "../Shared/_Content.cshtml";
}

<p class="title">规则管理 &nbsp;&nbsp;&nbsp;&nbsp;@Html.ActionLink("新增", "Create", null, new { @class="btn", style = "font-size:14px" })</p>
<table style="width:724px;">
    <tr class="line">
        <th>
            @Html.DisplayNameFor(model => model.SourceRegexGroup)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Regex)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsMatched)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RegexType)
        </th>
        <th>
            编辑
        </th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SourceRegexGroup)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Regex)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsMatched)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RegexType)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.SourceRegexId }) |
            @Html.ActionLink("Details", "Details", new { id = item.SourceRegexId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.SourceRegexId })
        </td>
    </tr>
}

</table>
