@model TimiSoft.InformationCollection.Models.SourceRegex

@{
    Layout = "../Shared/_Content.cshtml";
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    var css = new { @class = "search" };
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>SourceRegex</legend>

        @Html.HiddenFor(model => model.SourceRegexId)
        @Html.HiddenFor(model => model.SourceRegexGroupId)

        <div class="editor-label">
            @Html.LabelFor(model => model.Regex)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Regex, css)
            @Html.ValidationMessageFor(model => model.Regex)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name, css)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.IsMatched)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.IsMatched)
            @Html.ValidationMessageFor(model => model.IsMatched)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.RegexType)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.RegexType, css)
            @Html.ValidationMessageFor(model => model.RegexType)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

